---
pageable: true
per_page: 5
changefreq: weekly
priority: 1
---
<% page_articles.each_with_index do |article, i| %>
  <div class="vyber">
  <h2><%= link_to article.date.strftime('%-d. %-m. %Y'), article %></h2>
  <%= article.body %>
  </div>
<% end %>

<% if paginate && num_pages > 1 %>
<div class="strankovani">
	<ul class="nav">

  <% if prev_page %>
    <li><%= link_to '&laquo; Novější', prev_page %></li>
  <% end %>

  <% if next_page %>
    <li><%= link_to 'Starší &raquo;', next_page %></li>
	<% end %>

</ul>
</div>
<% end %>
