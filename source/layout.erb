      <%= yield %>
	<%= '</div>' unless current_article.nil? %>
    
<div class="paticka"><% link_to '/feed.xml', {:class => 'rss'} do %>RSS<% end %> <% link_to 'https://github.com/petrkle/vyber-tydne', {:class => 'github'} do %>vyber-tydne<% end %> <% link_to 'https://twitter.com/vybertydne', {:class => 'twitter'} do %>vybertydne<% end %></div>
  </body>
</html>
